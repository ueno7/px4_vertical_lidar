<?xml version="1.0"?>
<launch>

    <arg name="vehicle" default="iris_lidar_vertical"/>
    <arg name="sdf" default="$(find px4_simulation_stack)/Tools/sitl_gazebo/models/$(arg vehicle)/model.sdf"/>

    <arg name="verbose" default="false"/>

    <include file="$(find px4_simulation_stack)/launch/sitl/mavros_posix_sitl_remote_server.launch" >
        <arg name="vehicle" value="$(arg vehicle)" />
        <arg name="sdf" value="$(arg sdf)" />
        <arg name="verbose" value="$(arg verbose)" />
    </include>
    <include file="$(find px4_simulation_stack)/launch/gazebo/gzclient.launch" />

    <node pkg="tf" name="base2tf" type="static_transform_publisher" args="-0.12 0 0 1.57 0 3.14 base_link lidar_link 100" />

</launch>

